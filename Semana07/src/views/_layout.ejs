<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
  <title><%= typeof title !== 'undefined' ? title : 'App JWT' %></title>

  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <!-- Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <style>
    body {
      background: #ffffff;
      color: #333;
    }
    nav, .page-footer {
      background-color: #c62828 !important; 
    }
    .btn,
    .btn-large {
      background-color: #c9a300 !important; 
      color: #ffffff !important;
    }
    .btn:hover {
      background-color: #b38e00 !important; 
    }
    .card {
      border-radius: 16px;
    }
    .brand-logo {
      font-weight: bold;
    }
    footer .white-text {
      font-size: 0.9rem;
    }

    /* ðŸ”¥ Estilos especiales para Dashboard */
    table.striped thead {
      background-color: #c62828;     
    }
    table.striped thead th {
      color: #fff;
      font-weight: bold;
    }
    table.striped tbody tr:hover {
      background-color: #fff5e0;   
    }
    table.striped td, table.striped th {
      padding: 12px 15px;
    }
  </style>
</head>
<body>
  <nav class="blue">
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">JWT App</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <!-- enlaces visibles SOLO si NO hay sesiÃ³n -->
        <li class="guest"><a href="/signIn">Sign In</a></li>
        <li class="guest"><a href="/signUp">Sign Up</a></li>

        <!-- enlaces visibles SOLO si HAY sesiÃ³n -->
        <li class="auth"><a href="/profile">Mi Perfil</a></li>
        <li class="auth"><a href="/dashboard">Dashboard</a></li>
      </ul>
    </div>
  </nav>

  <main class="container container-narrow" style="padding:24px 0;">
    <%- body %>
  </main>

  <footer class="page-footer blue">
    <div class="container center-align">
      <span class="white-text">Desarrollo Web Avanzado â€” Seguridad con JWT</span>
    </div>
  </footer>

  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Frontend helpers -->
  <script type="module" src="/js/app.js"></script>

  <!-- ðŸ”‘ Control dinÃ¡mico del menÃº -->
  <script type="module">
    import { getToken } from '/js/app.js';
    const logged = !!getToken();               // true si hay token
    document.querySelectorAll('.guest').forEach(li => li.style.display = logged ? 'none' : '');
    document.querySelectorAll('.auth').forEach(li => li.style.display = logged ? '' : 'none');
  </script>
</body>
</html>
